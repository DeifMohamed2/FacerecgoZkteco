<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Attendance System</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <h1>ðŸ“š Attendance System</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Dashboard</a></li>
                <li><a href="/students" class="nav-link active">Students</a></li>
                <li><a href="/students/add" class="nav-link">Add Student</a></li>
                <li><a href="/attendance" class="nav-link">Attendance</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>Students</h2>
                <a href="/students/add" class="btn btn-primary">+ Add New Student</a>
            </div>

            <div class="card">
                <div class="card-body">
                    <% if (students.length > 0) { %>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Department</th>
                                    <th>Added On</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(student => { %>
                                    <tr>
                                        <td><span class="badge badge-large"><%= student.studentId %></span></td>
                                        <td><strong><%= student.name %></strong></td>
                                        <td><%= student.email || 'N/A' %></td>
                                        <td><%= student.phone || 'N/A' %></td>
                                        <td><%= student.department || 'N/A' %></td>
                                        <td><%= new Date(student.createdAt).toLocaleDateString() %></td>
                                        <td>
                                            <form method="POST" action="/students/<%= student.studentId %>?_method=DELETE" style="display: inline;">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this student?')">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    <% } else { %>
                        <div class="empty-state">
                            <h3>No Students Yet</h3>
                            <p>Start by adding your first student</p>
                            <a href="/students/add" class="btn btn-primary">Add Student</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Attendance Management System. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

