<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Attendance System</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <h1>ðŸ“š Attendance System</h1>
            </div>
            <ul class="nav-menu">
                <li><a href="/" class="nav-link">Dashboard</a></li>
                <li><a href="/students" class="nav-link">Students</a></li>
                <li><a href="/students/add" class="nav-link">Add Student</a></li>
                <li><a href="/attendance" class="nav-link active">Attendance</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <h2>Attendance Records</h2>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>Search Attendance</h3>
                </div>
                <div class="card-body">
                    <form method="GET" action="/attendance/search" class="search-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="studentId">Student ID</label>
                                <input type="text" id="studentId" name="studentId" class="form-control" placeholder="Enter 4-digit ID" value="<%= typeof searchQuery !== 'undefined' ? (searchQuery.studentId || '') : '' %>">
                            </div>
                            <div class="form-group">
                                <label for="date">Date</label>
                                <input type="date" id="date" name="date" class="form-control" value="<%= typeof searchQuery !== 'undefined' ? (searchQuery.date || '') : '' %>">
                            </div>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-primary">Search</button>
                                <a href="/attendance" class="btn btn-secondary">Clear</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3>All Records</h3>
                </div>
                <div class="card-body">
                    <% if (attendanceRecords.length > 0) { %>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Student Name</th>
                                    <th>Date & Time</th>
                                    <th>Status</th>
                                    <th>Verify Method</th>
                                    <th>Device SN</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% attendanceRecords.forEach(record => { %>
                                    <tr>
                                        <td><span class="badge"><%= record.studentId %></span></td>
                                        <td><%= record.studentName %></td>
                                        <td><%= new Date(record.dateTime).toLocaleString() %></td>
                                        <td><span class="status-badge status-present"><%= record.status %></span></td>
                                        <td><%= record.verifyMethod %></td>
                                        <td><%= record.deviceSN %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>

                        <% if (totalPages > 1) { %>
                            <div class="pagination">
                                <% if (currentPage > 1) { %>
                                    <a href="/attendance?page=<%= currentPage - 1 %>" class="btn btn-secondary">Previous</a>
                                <% } %>
                                <span class="page-info">Page <%= currentPage %> of <%= totalPages %></span>
                                <% if (currentPage < totalPages) { %>
                                    <a href="/attendance?page=<%= currentPage + 1 %>" class="btn btn-secondary">Next</a>
                                <% } %>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="empty-state">
                            <h3>No Attendance Records</h3>
                            <p>Attendance records will appear here when students use the face recognition device</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2025 Attendance Management System. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>

