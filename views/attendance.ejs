<%- include('partials/header', { title: 'Attendance Records' }) %>

<div class="row mb-4">
    <div class="col-md-12">
        <h2 class="mb-4"><i class="bi bi-clock-history me-2"></i>Attendance Records</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label for="filterStudentId" class="form-label">Student ID</label>
                        <input type="text" class="form-control" id="filterStudentId" placeholder="Filter by ID">
                    </div>
                    <div class="col-md-3">
                        <label for="filterStartDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="filterStartDate">
                    </div>
                    <div class="col-md-3">
                        <label for="filterEndDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="filterEndDate">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label><br>
                        <button class="btn btn-primary" onclick="loadAttendance()">
                            <i class="bi bi-search me-2"></i>Filter
                        </button>
                        <button class="btn btn-secondary" onclick="resetFilters()">
                            <i class="bi bi-arrow-clockwise me-2"></i>Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Records</h5>
                <button class="btn btn-sm btn-outline-primary" onclick="loadAttendance()">
                    <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                </button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th>Verify Mode</th>
                                <th>Device SN</th>
                            </tr>
                        </thead>
                        <tbody id="attendanceTableBody">
                            <tr>
                                <td colspan="6" class="text-center text-muted">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <nav>
                    <ul class="pagination justify-content-center" id="pagination">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<script>
    let currentPage = 1;
    const limit = 50;

    function loadAttendance(page = 1) {
        currentPage = page;
        const studentId = document.getElementById('filterStudentId').value;
        const startDate = document.getElementById('filterStartDate').value;
        const endDate = document.getElementById('filterEndDate').value;

        let url = `/api/attendance?page=${page}&limit=${limit}`;
        if (studentId) url += `&studentId=${studentId}`;
        if (startDate) url += `&startDate=${startDate}`;
        if (endDate) url += `&endDate=${endDate}`;

        fetch(url)
            .then(res => res.json())
            .then(data => {
                const tbody = document.getElementById('attendanceTableBody');
                
                if (data.attendances.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="6" class="text-center text-muted">No records found</td></tr>';
                    return;
                }

                tbody.innerHTML = data.attendances.map(attendance => {
                    const date = new Date(attendance.dateTime);
                    return `
                        <tr>
                            <td>${attendance.studentId}</td>
                            <td>${attendance.studentName}</td>
                            <td>${date.toLocaleString()}</td>
                            <td><span class="badge bg-info">${attendance.status}</span></td>
                            <td>${attendance.verifyMode}</td>
                            <td><small>${attendance.deviceSN}</small></td>
                        </tr>
                    `;
                }).join('');

                // Update pagination
                updatePagination(data.totalPages, data.currentPage);
            })
            .catch(error => {
                document.getElementById('attendanceTableBody').innerHTML = 
                    `<tr><td colspan="6" class="text-center text-danger">Error loading data: ${error.message}</td></tr>`;
            });
    }

    function updatePagination(totalPages, currentPage) {
        const pagination = document.getElementById('pagination');
        if (totalPages <= 1) {
            pagination.innerHTML = '';
            return;
        }

        let html = '';
        if (currentPage > 1) {
            html += `<li class="page-item"><a class="page-link" href="#" onclick="loadAttendance(${currentPage - 1})">Previous</a></li>`;
        }

        for (let i = 1; i <= totalPages; i++) {
            if (i === currentPage) {
                html += `<li class="page-item active"><span class="page-link">${i}</span></li>`;
            } else {
                html += `<li class="page-item"><a class="page-link" href="#" onclick="loadAttendance(${i})">${i}</a></li>`;
            }
        }

        if (currentPage < totalPages) {
            html += `<li class="page-item"><a class="page-link" href="#" onclick="loadAttendance(${currentPage + 1})">Next</a></li>`;
        }

        pagination.innerHTML = html;
    }

    function resetFilters() {
        document.getElementById('filterStudentId').value = '';
        document.getElementById('filterStartDate').value = '';
        document.getElementById('filterEndDate').value = '';
        loadAttendance(1);
    }

    // Load attendance on page load
    loadAttendance();

    // Auto-refresh every 30 seconds
    setInterval(() => loadAttendance(currentPage), 30000);
</script>

<%- include('partials/footer') %>
